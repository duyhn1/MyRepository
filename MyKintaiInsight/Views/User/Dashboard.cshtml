@model MyKintaiInsight.Models.User.WorkplaceModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="latLoc" content="@Model.latitude">
	<meta name="lngLoc" content="@Model.longitute">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        #map {
            height: 600px;
            width: 100%;
        }
        @@media screen and (max-width: 768px) {
            .container {
                width: 100%;
                position: relative;
            }
            #map {
                height: 90vh;
                width: 100%;
            }
        }
    </style>
</head>
<body>
		<div class="container">
			<div id="map"></div>
			<div style="margin-top:10px;">
                <button id="btnCheckin" class="btn btn-primary">Check-in</button>
                <button id="btnCheckout" class="btn btn-success">Check-out</button>
			</div>
		</div>
    	<script>
            function initMap() {
                var myLocation = { lat: @Model.latitude - Math.random() / 10000, lng: @Model.longitute - Math.random() / 10000 };
                var myRegisterWork = { lat: @Model.latitude, lng: @Model.longitute};
                var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 18,
                    center: myLocation
                });
                var marker = new google.maps.Marker({
                    position: myRegisterWork,
                    map: map
                });
                var locationCircle = new google.maps.Circle({
                    strokeColor: '#0000FF',
                    strokeOpacity: 0.6,
                    strokeWeight: 1,
                    fillColor: '#0000FF',
                    fillOpacity: 0.2,
                    map: map,
                    center: myLocation,
                    radius: 200
                });
                var center = new google.maps.Circle({
                    strokeColor: '#FFFFFF',
                    strokeOpacity: 1,
                    strokeWeight: 2,
                    fillColor: '#0000FF',
                    fillOpacity: 1,
                    map: map,
                    center: myLocation,
                    radius: 5
                });
            }
        </script>
        <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAkfJu545YI3KK1uEoWN18klG0df06QqQY&callback=initMap">
        </script>
    <script>
        $(document).ready(function(){
            $('#btnCheckin').click(function(){
                $.ajax({
                    method: 'post',
                    url: '/User/CheckIn',
                    data: {lat: @Model.latitude, lng: @Model.longitute},
                    success: function(data) {
                        if (data.errors) {
                            alert(data.errors.errorMessage);
                        } else {
                            alert('Check in success');
                        }
                    },
                    error: function(err) {
                        console.error(err);
                    }
                })
            })
            $('#btnCheckout').click(function(){
                $.ajax({
                    method: 'post',
                    url: '/User/CheckOut',
                    data: {lat: @Model.latitude, lng: @Model.longitute},
                    success: function() {
                        if (data.errors) {
                            alert(data.errors.errorMessage);
                        } else {
                            alert('Check out success');
                        }
                    },
                    error: function(err) {
                        console.error(err);
                    }
                })
            })
        });
    </script>
</body>
</html>

